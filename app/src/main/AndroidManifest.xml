<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.stx.vitamiodemo">

    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/app"
        android:label="掌上课堂"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="掌上课堂">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AllClassActivity"
            android:label="掌上课堂" />
        <activity
            android:name=".StudentActivity"
            android:label="掌上课堂" />
        <activity
            android:name=".StudentSignInActivity"
            android:label="掌上课堂" />
        <activity
            android:name=".StudentSignIn2Activity"
            android:label="掌上课堂" />
        <activity
            android:name=".SettingsActivity"
            android:label="掌上课堂" />
        <activity
            android:name=".ClassActivity"
            android:label="掌上课堂" />
        <activity
            android:name=".ClassCatalogActivity"
            android:label="掌上课堂" />
        <activity
            android:name=".ClassCommentActivity"
            android:label="掌上课堂" />
        <!-- 必须初始化 -->
        <activity
            android:name="io.vov.vitamio.activity.InitActivity"
            android:configChanges="orientation|screenSize|smallestScreenSize|keyboard|keyboardHidden|navigation"
            android:launchMode="singleTop"
            android:theme="@android:style/Theme.NoTitleBar"
            android:windowSoftInputMode="stateAlwaysHidden" />
        <activity android:name=".RegisterActivity" android:label="掌上课堂"></activity>
    </application>

</manifest>